<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/placesListFragment">

    <fragment
        android:id="@+id/placesListFragment"
        android:name="com.example.happyplacesapp.ui.fragements.PlacesListFragment"
        android:label="fragment_places_list"
        tools:layout="@layout/fragment_places_list">
        <action
            android:id="@+id/action_placesListFragment_to_addPlaceFragment"
            app:destination="@id/addPlaceFragment" />
        <action
            android:id="@+id/action_placesListFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.example.happyplacesapp.ui.fragements.AddPlaceFragment"
        android:label="fragment_add_place"
        tools:layout="@layout/fragment_add_place">
        <argument
            android:name="latitude"
            android:defaultValue="0.0"
            app:argType="float" />
        <argument
            android:name="longitude"
            android:defaultValue="0.0"
            app:argType="float" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.happyplacesapp.ui.fragements.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_addPlaceFragment"
            app:destination="@id/addPlaceFragment" />
    </fragment>

</navigation>